<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

    <ImageView
        android:id="@+id/img_message_itemUserIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/da8e974dc_r"/>

    <TextView
        android:id="@+id/tv_messagme_itemUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@id/img_message_itemUserIcon"
        android:text="黄飞鸿"
        android:textSize="14sp"/>

    <ImageView
        android:layout_marginLeft="56dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/img_message_itemUserIcon"
        android:background="@color/divider"/>


</RelativeLayout>