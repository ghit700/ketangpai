<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_accout_item"
                android:paddingLeft="10dp"
    >

    <ImageView
        android:id="@+id/img_message"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_message"
        android:text="1111"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="2016/1/1 13:12"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message_name"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_message"
        android:maxLines="1"
        android:text="1111"
        android:textSize="14sp"/>

    <ImageView
        android:layout_marginLeft="65dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/img_message"
        android:background="@color/divider"/>
</RelativeLayout>